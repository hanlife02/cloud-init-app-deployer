# Cloud-Init App Deployer 配置文件
# 复制此文件为 config.env 并根据需要修改配置

# =============================================================================
# 应用基础配置
# =============================================================================
APP_NAME="cloud-app"
APP_VERSION="1.0.0"
APP_PORT=8080
APP_ENV="production"

# 应用数据目录
APP_DATA_DIR="/opt/app/data"
APP_CONFIG_DIR="/opt/app/config"

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL="INFO"
LOG_DIR="/var/log/cloud-app-deployer"
LOG_MAX_SIZE="100M"
LOG_MAX_FILES=10

# =============================================================================
# 监控配置
# =============================================================================
# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=300

# 更新检查间隔（秒）
UPDATE_CHECK_INTERVAL=3600

# 健康检查超时（秒）
HEALTH_CHECK_TIMEOUT=30

# 应用重启重试次数
RESTART_RETRY_COUNT=3

# =============================================================================
# 更新配置
# =============================================================================
# Git仓库信息
GIT_REPO_URL="https://github.com/your-username/Cloud-Init-App-Deployer.git"
GIT_BRANCH="main"

# 是否启用自动更新
AUTO_UPDATE_ENABLED=true

# 更新前是否创建备份
BACKUP_BEFORE_UPDATE=true

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# =============================================================================
# 通知配置
# =============================================================================
# 邮件通知配置
NOTIFICATION_EMAIL=""
SMTP_SERVER=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_USE_TLS=true

# Slack通知配置
SLACK_WEBHOOK_URL=""
SLACK_CHANNEL=""

# 企业微信通知配置
WECHAT_WEBHOOK_URL=""

# 钉钉通知配置
DINGTALK_WEBHOOK_URL=""

# =============================================================================
# 安全配置
# =============================================================================
# 是否启用SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=""
SSL_KEY_PATH=""

# 访问控制
ALLOWED_IPS=""
BLOCKED_IPS=""

# =============================================================================
# 性能配置
# =============================================================================
# 最大并发连接数
MAX_CONNECTIONS=1000

# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# 工作进程数
WORKER_PROCESSES=auto

# =============================================================================
# 数据库配置（如果需要）
# =============================================================================
DB_TYPE=""
DB_HOST=""
DB_PORT=""
DB_NAME=""
DB_USERNAME=""
DB_PASSWORD=""

# =============================================================================
# 缓存配置（如果需要）
# =============================================================================
CACHE_TYPE=""
CACHE_HOST=""
CACHE_PORT=""
CACHE_PASSWORD=""

# =============================================================================
# 第三方服务配置
# =============================================================================
# 对象存储配置
S3_BUCKET=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_REGION=""

# CDN配置
CDN_URL=""

# =============================================================================
# 开发和调试配置
# =============================================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
PROFILING_ENABLED=false

# =============================================================================
# 系统配置
# =============================================================================
# 时区设置
TIMEZONE="Asia/Shanghai"

# 文件上传限制
MAX_UPLOAD_SIZE="10M"

# 临时文件目录
TEMP_DIR="/tmp/cloud-app"

# =============================================================================
# 备份配置
# =============================================================================
# 备份存储路径
BACKUP_DIR="/opt/app/backups"

# 备份类型（local, s3, ftp）
BACKUP_TYPE="local"

# 备份压缩
BACKUP_COMPRESSION=true

# =============================================================================
# 集群配置（如果需要）
# =============================================================================
CLUSTER_ENABLED=false
CLUSTER_NODES=""
CLUSTER_TOKEN=""
