# Cloud-Init App Deployer 配置文件
#
# 该文件包含应用部署的各种配置参数

# 应用基本配置
APP_NAME=cloud-init-app
APP_VERSION=1.0.0
APP_PORT=8080
APP_USER=appuser
APP_GROUP=appuser

# 目录配置
APP_HOME=/opt/app
APP_DATA_DIR=/opt/app/data
APP_LOG_DIR=/opt/app/logs
APP_CONFIG_DIR=/opt/app/config
SCRIPT_DIR=/opt/app/scripts

# 监控配置
HEALTH_CHECK_INTERVAL=300  # 5分钟
HEALTH_CHECK_TIMEOUT=30    # 30秒
HEALTH_CHECK_RETRIES=3

# 更新配置
UPDATE_CHECK_INTERVAL=86400  # 24小时
UPDATE_SOURCE_URL=""         # 更新源URL（需要根据实际情况配置）
BACKUP_BEFORE_UPDATE=true
ROLLBACK_ON_FAILURE=true

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=100M
LOG_RETENTION_DAYS=7
LOG_COMPRESS=true

# 通知配置
ENABLE_NOTIFICATIONS=true
NOTIFICATION_EMAIL=""        # 告警邮箱（需要配置）
NOTIFICATION_WEBHOOK=""      # Webhook URL（可选）
NOTIFICATION_SLACK_TOKEN=""  # Slack Token（可选）

# 系统配置
TIMEZONE=Asia/Shanghai
LOCALE=zh_CN.UTF-8

# 安全配置
ENABLE_FIREWALL=false
ALLOWED_PORTS="22,80,443,8080"
FAIL2BAN_ENABLED=false
